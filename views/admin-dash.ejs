<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="/css/calendar.css">
  <script type="module" src="/javascript/playerChart.js"></script>

  <title>Admin Dashboard</title>
</head>

<body class="bg-gray-500">
  <%- include('partials/header') %>

    <!-- Main Content -->
    <div class="container mx-auto p-8">
      <!-- User Profile Section -->
      <div class="flex items-center mb-8">

        <div>
          <h1 class="text-5xl text-gray-100 font-semibold mb-2">
            Welcome <%= user.firstName %>
          </h1>
          <p class="text-gray-100">
            Role: Admin <%= user.role %> | Email: <%= user.email %>
          </p>
        </div>
      </div>

      <!-- Add more sections as needed for leagues, standings, schedule, practices -->

      <div class="container mx-auto p-8">
        <!-- Dashboard content -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <!-- Leagues Box -->
          <div
            class="flex flex-col items-center justify-center bg-teal-400 bg-opacity-30 p-6 rounded-lg shadow-lg transition transform hover:scale-105">
            <div class="flex items-center mb-1">
              <i class="material-icons text-5xl text-blue-800 mr-1">emoji_events</i>
              <h2 class="text-xl text-blue-800 font-semibold">Leagues</h2>
            </div>
            <p class="text-3xl font-bold text-blue-800">
              <!-- <%= leagueCount %> --> 105
            </p>
          </div>



          <!-- Players Box -->
          <div
            class="flex flex-col items-center justify-center bg-teal-400 bg-opacity-30 p-6 rounded-lg shadow-lg transition transform hover:scale-105">
            <div class="flex items-center mb-1">
            <i class="material-icons text-5xl text-green-500 mr-1 ">groups</i>
            <h2 class="text-xl text-green-500 font-semibold">Players</h2>
          </div>
          <p class="text-3xl font-bold text-green-500">
            <!-- <%= playerCount %> -->3211
          </p>
        </div>

        <!-- Teams Box -->
        <div
          class="flex flex-col items-center justify-center bg-teal-500 bg-opacity-30 p-6 rounded-lg shadow-lg transition transform hover:scale-105">
          <div class="flex items-center mb-1">

            <i class="material-icons text-5xl text-orange-500 mr-1">diversity_3</i>
            <h2 class="text-xl text-orange-500 font-semibold">Teams</h2>


          </div>
          <p class="text-3xl font-bold text-orange-500">
            <!-- <%= teamCount %> --> 315
          </p>
        </div>
      </div>
    </div>



    <canvas id="playerChart" width="400" height="400"></canvas>

    <!-- Admin Calender -->

    <!-- Calendar Container -->
    <div class="container mx-auto mt-8 ">
      <div id="calendar"></div>
    </div>

    <!-- Event Modal -->
    <div id="event-modal" class="modal fixed  w-full h-full top-0 left-0 hidden overflow-y-auto z-50">
      <div class="modal-overlay absolute bg-gray-900 opacity-50"></div>

      <div class="modal-container fixed  w-full h-full flex items-center justify-center">
        <div class="modal-content bg-gray-700 text-white w-96 p-4 rounded shadow">
          <h2 class="text-xl text-white font-bold mb-4">Add Event</h2>
          <form id="add-event-form">
            <div class="mb-4">
              <label for="event-title" class="block text-white">Event Title</label>
              <input type="text" id="event-title" name="title" class="form-input mt-1 block w-full text-black" required>
            </div>
            <div class="mb-4">
              <label for="event-date" class="block text-white">Event Date</label>
              <input type="text" id="event-date" name="date" class="form-input mt-1 block w-full text-black" required>
            </div>
            <div class="mb-4">
              <label for="event-description" class="block text-white">Event Description</label>
              <textarea id="event-description" name="description" class="form-textarea mt-1 block w-full text-black"
                rows="3" required></textarea>
            </div>
            <div class="flex justify-end">
              <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Save</button>
              <button type="button" class="modal-close px-4 py-2 ml-2">Close</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    </div>
    <%- include('partials/footer') %>

      <!-- Include jQuery and FullCalendar JS -->
      <script src="https://code.jquery.com/jquery-3.6.4.min.js" referrerpolicy="no-referrer"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"
        referrerpolicy="no-referrer"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.2/fullcalendar.min.js"
        referrerpolicy="no-referrer"></script>
      <script type="module" src="/javascript/calendar.js"></script>
      <!-- Import the playerChart.js file -->

</body>

</html>