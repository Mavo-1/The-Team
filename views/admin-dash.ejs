<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/main.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/fullcalendar@5.9.0/main.min.css"
      rel="stylesheet"
    />
    <title>Admin Dashboard</title>
  </head>
  <body>
    <%- include('partials/header') %>

    <!-- Main Content -->
    <div class="container mx-auto p-8">
      <!-- Your content will go here -->
      <h1 class="text-3xl font-semibold mb-4">
        Welcome to Your Dashboard <%= user.firstName %>
      </h1>
    </div>

    <!-- Add more sections as needed for leagues, standings, schedule, practices -->

    <div class="container mx-auto p-8">
      <!-- Dashboard content -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Leagues Box -->
        <div class="bg-blue-100 p-4 rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold mb-2">Leagues</h2>
          <p class="text-4xl font-bold text-blue-500"><%= leagueCount %></p>
        </div>

        <!-- Players Box -->
        <div class="bg-red-100 p-4 rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold mb-2">Players</h2>
          <p class="text-4xl font-bold text-green-500"><%= playerCount %></p>
        </div>

        <!-- Teams Box -->
        <div class="bg-yellow-100 p-4 rounded-lg shadow-md">
          <h2 class="text-2xl font-semibold mb-2">Teams</h2>
          <p class="text-4xl font-bold text-red-500"><%= teamCount %></p>
        </div>
      </div>
    </div>
    <div  class="mt-2 m-4 bg-white rounded-lg shadow-md border border-gray-300">
      <div id="calendar" class="m-5 m-4 bg-white rounded-lg ">
        
      </div>
    </div>
    <script src="/javascript/calendar.js"></script>
  </body>
</html>
