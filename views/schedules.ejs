<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Schedules</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-r from-gray-900 via-gray-700 to-gray-500">
    <%- include('partials/header') %>

    <div class="min-h-screen">
        <main class="container mx-auto mt-8">

            <div class="flex justify-end p-4 items-center space-x-2">
                <input type="text" id="search" name="searchSchedule" placeholder="location, date, league,team"
                    class="border p-2 rounded-lg" />
                <button id="searchButton"
                    class="bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded">
                    Search
                </button>
            </div>

            <h1 class="mb-4 text-3xl font-medium text-center text-white">
                Game Schedule
            </h1>

            <div class="capitalize ontainer mx-auto">
                <% leagues.forEach(league=> { %>
                <div class="bg-white shadow-lg rounded-lg p-4 mb-4">
                    <h2 class="text-xl font-semibold text-gray-800 mb-2"><%= league.leagueName %></h2>
                    <p class="text-gray-600"><span class="font-semibold">Sport:</span> <%= league.sport %></p>
                    <p class="text-gray-600"><span class="font-semibold">Start Date:</span> <%= league.startDate.toLocaleDateString('en-US', { month: 'short' , day: 'numeric' , year: 'numeric' }) %></p>
                    <p class="text-gray-600"><span class="font-semibold">End Date:</span> <%= league.endDate.toLocaleDateString('en-US', { month: 'short' , day: 'numeric' , year: 'numeric' }) %></p>
                    <a href="/schedules/<%= league._id %>/games" class="block mt-4 text-center bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded">
                        View Games
                    </a>
                </div>
                <% }); %>
            </div>

            
            

        </main>
    </div>

    <%- include('partials/footer') %>
    <script src="/javascript/deleteLeague.js"></script>
</body>

</html>
