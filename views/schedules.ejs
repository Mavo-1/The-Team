<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Schedules</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-r from-gray-900 via-gray-700 to-gray-500">
    <%- include('partials/header') %>

    <div class="min-h-screen">
        <main class="container mx-auto mt-8">

            <div class="flex justify-end p-4 items-center space-x-2">
                <input type="text" id="search" name="searchSchedule" placeholder="location, date, league,team"
                    class="border p-2 rounded-lg" />
                <button id="searchButton"
                    class="bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded">
                    Search
                </button>
            </div>

            <h1 class="mb-4 text-3xl font-medium text-center text-white">
                Game Schedule
            </h1>
            <div class="container mx-auto">
                <ul class="divide-y divide-gray-300">
                    <% leagues.forEach(league=> { %>
                    <li class="py-6 flex items-center justify-between">
                        <div>
                            <h2 class="text-xl font-semibold text-white"><%= league.leagueName %></h2>
                            <p class="text-gray-300">Sport: <%= league.sport %></p>
                            <p class="text-gray-300">Start Date: <%= league.startDate.toLocaleDateString('en-US', { month: 'short' , day: 'numeric' , year: 'numeric' }) %></p>
                            <p class="text-gray-300">End Date: <%= league.endDate.toLocaleDateString('en-US', { month: 'short' , day: 'numeric' , year: 'numeric' }) %></p>
                        </div>
                        <a href="/schedules/<%= league._id %>/games" class="text-white hover:text-indigo-500">
                            <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </a>
                    </li>
                    <% }); %>
                </ul>
            </div>

            
            

        </main>
    </div>

    <%- include('partials/footer') %>
    <script src="/javascript/deleteLeague.js"></script>
</body>

</html>
