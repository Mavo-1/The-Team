<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Schedules</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-400 font-sans min-h-screen">
    <%- include('partials/header') %>
        <!-- Search Bar to Filter Games -->

        <div class="min-h-screen">
            <main>
                <div class="flex justify-end p-4 items-center space-x-2">
                    <input type="text" id="search" placeholder="location,date,league,team"
                        class="border p-2 rounded-lg" />
                    <button id="searchButton"
                        class="bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded">
                        Search
                    </button>
                </div>
                <div class="flex justify-center">
                    <h1 class="mb-4 text-3xl font-medium text-center mt-4 text-blue-950">
                        Game Schedule
                    </h1>
                    
                </div>

                


                <table
                    class="table-auto mx-auto w-3/4 bg-white shadow-lg rounded-lg ring ring-blue-950 ring-opacity-43">
                    <thead>
                        <tr
                            class="py-4 my-4 text-left font-medium text-white tracking-wider border-b border-blue-950 bg-blue-950 rounded-t-lg">
                            <th class="px-4 py-2">League Name</th>
                            <th class="px-4 py-2">Sport</th>
                            <th class="px-4 py-2">Start Date</th>
                            <th class="px-4 py-2">End Date</th>
                            <th class="px-4 py-2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% leagues.forEach(league=> { %>
                            <tr class="uppercase hover:bg-gray-200">
                                <td class="px-4 py-2">
                                    <%= league.leagueName %>
                                </td>
                                <td
                                    class="px-4 py-2 text-blue-950 border-l border-gray-300 whitespace-nowrap max-w-xs overflow-ellipsis">
                                    <%= league.sport %>
                                </td>
                                <td
                                    class="px-4 py-2 text-blue-950 border-l border-gray-300 whitespace-nowrap max-w-xs overflow-ellipsis">
                                    <%= league.startDate.toLocaleDateString('en-US', { month: 'short' , day: 'numeric' ,
                                        year: 'numeric' }) %>
                                </td>
                                <td
                                    class="px-4 py-2 text-blue-950 border-l border-gray-300 whitespace-nowrap max-w-xs overflow-ellipsis">
                                    <%= league.endDate.toLocaleDateString('en-US', { month: 'short' , day: 'numeric' ,
                                        year: 'numeric' }) %>
                                </td>
                                <td
                                    class="px-4 py-2 text-blue-950 border-l border-gray-300 whitespace-nowrap max-w-xs overflow-ellipsis">


                                    <a href="/schedules/<%= league._id %>/games"
                                        class="text-indigo-600 hover:text-indigo-900">View Games</a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>

                </table>

            </main>
        </div>

        <%- include('partials/footer') %>
            <script src="/javascript/deleteLeague.js"></script>
</body>

</html>