<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Leagues</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-100 font-sans">
    <%- include('partials/header') %>
    <div class="min-h-screen">
      <main>
        <h1 class="mb-4 text-3xl font-medium text-center mt-4 text-blue-950">
          Leagues
        </h1>

        <!-- List of Leagues -->
        <!-- List of Leagues in a table -->

        <table class="table-auto mx-auto w-3/4 bg-white shadow-lg rounded-lg">
          <thead>
            <tr
              class="py-4 my-4 text-left font-medium text-blue-950 tracking-wider border-b border-gray-300"
            >
              <th class="px-4 py-2">League Name</th>
              <th class="px-4 py-2">Sport</th>
              <th class="px-4 py-2">Start Date</th>
              <th class="px-4 py-2">End Date</th>
              <th class="px-4 py-2">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% leagues.forEach(league => { %>
            <tr class="uppercase hover:bg-gray-200">
              <td class="px-4 py-2"><%= league.leagueName %></td>
              <td
                class="px-4 py-2 text-blue-950 border-l border-gray-300 whitespace-nowrap max-w-xs overflow-ellipsis">
                <%= league.sport %>
              </td>
              <td
                class="px-4 py-2 text-blue-950 border-l border-gray-300 whitespace-nowrap max-w-xs overflow-ellipsis">
                <%= league.startDate.toDateString() %>
              </td>
              <td
                class="px-4 py-2 text-blue-950 border-l border-gray-300 whitespace-nowrap max-w-xs overflow-ellipsis">
                <%= league.endDate.toDateString() %>
              </td>
              <td
                class="px-4 py-2 text-blue-950 border-l border-gray-300 whitespace-nowrap max-w-xs overflow-ellipsis">
                <form id="deleteForm" data-id="<%= league._id %>">
                  <input type="hidden" name="_method" value="DELETE" />
                  <button
                    type="submit"
                    class="delete-button text-red-600 hover:text-red-900"
                  >
                    Delete
                  </button>
                </form>

                <a
                  href="/leagues/<%= league._id %>/teams"
                  class="text-indigo-600 hover:text-indigo-900"
                  >View Teams</a
                >
              </td>
            </tr>
            <% }); %>
          </tbody>
          <!-- Add League Button -->
          <div class="fixed bottom-10 right-0 p-6">
            <a
              href="/leagues/create"
              class="bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded"
              >Add League</a
            >
          </div>
        </table>
        <!--Delete confirmation-->
        <div
          id="confirmationModal"
          class="hidden fixed top-0 left-0 w-full h-full flex items-center justify-center bg-gray-900 bg-opacity-75"
        >
          <div
            class="modal-container bg-white w-1/2 max-w-md mx-auto rounded shadow-lg p-4"
          >
            <h2 class="text-xl font-semibold mb-4">Confirm Deletion</h2>
            <p>Are you sure you want to delete this league?</p>
            <div class="mt-4 flex justify-end">
              <button
                id="cancelButton"
                class="mr-4 px-3 py-2 bg-gray-200 text-gray-700 font-medium rounded"
              >
                Cancel
              </button>
              <button
                id="confirmButton"
                class="px-3 py-2 bg-red-500 text-white font-semibold rounded"
              >
                Confirm
              </button>
            </div>
          </div>
        </div>
      </main>
    </div>

    <%- include('partials/footer') %>
    <script src="/javascript/deleteLeague.js"></script>
  </body>
</html>
