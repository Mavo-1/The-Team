<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Leagues</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <%- include('partials/header') %>
    <div class="min-h-screen bg-gray-100">
        <main class="py-10">
            <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
                <h1 class="text-3xl font-bold text-gray-900 mb-6">Leagues</h1>

                <!-- List of Leagues -->
                <div class="bg-white shadow overflow-hidden sm:rounded-md">
                    <ul>
                        <% leagues.forEach(league => { %>
                            <li class="border-b border-gray-200">
                                <div class="flex items-center justify-between px-4 py-3 sm:px-6">
                                    <div class="text-sm leading-5 font-medium text-indigo-600">
                                        <%= league.leagueName %>
                                    </div>
                                    <!-- Add a link to view the teams for this league -->
                                    <a href="/leagues/<%= league._id %>/teams" class="text-indigo-600 hover:text-indigo-900">View Teams</a>
                                </div> 
                            </li>
                        <% }); %>
                    </ul>
                </div>

                <!-- Add League Button -->
                <div class="mt-6">
                    <a href="/dashboard/createLeague" class="bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded">Add League</a>
                </div>
            </div>
        </main>
        
    </div>
        

<%- include('partials/footer') %>
    </div>
</body>
</html>