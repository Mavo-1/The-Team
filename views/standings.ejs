<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Standings</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans flex flex-col min-h-screen">

        
    
        <div class="min-h-screen">
            <%- include('partials/header') %>
            <main class="py-4">
                <h1 class="text-3xl font-semibold text-center mt-8">League Standings</h1>
    
                <!-- Display a grid of league squares -->
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                    <% leagues.forEach(league => { %>
                        <a href="/standings/<%= league._id %>" class="bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-4 px-4 rounded">
                            <%= league.leagueName %>
                        </a>
                    <% }); %>
                </div>
            </main>
        </div>
    
       
<footer>
    <%- include('partials/footer') %>
</footer>
</body>
</html>