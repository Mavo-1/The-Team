<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Locations</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

</head>

<body class="bg-gradient-to-r from-gray-900 via-gray-700 to-gray-500">
    <%- include('partials/header') %>

    <div class="min-h-screen">
        <main>

            <div class="flex justify-end p-4 items-center space-x-2">
                <input type="text" id="search" placeholder=""
                    class="border p-2 rounded-lg" />
                <button id="searchButton"
                    class="bg-indigo-500 hover:bg-indigo-700 text-white font-semibold py-2 px-4 rounded">
                    Search
                </button>
            </div>

            <h1 class="mb-4 text-3xl font-medium text-center mt-4 text-white">
                Locations
            </h1>

            <table class="table-auto mx-auto w-3/4 bg-white shadow-lg rounded-lg ring ring-blue-950 ring-opacity-43">
                <thead>
                    <tr class="py-4 my-4 text-left font-medium text-white tracking-wider border-b border-blue-950 bg-blue-950 rounded-t-lg">
                        <th class="px-4 py-2">League Name</th>
                        <th class="px-4 py-2">Sport</th>
                        <th class="px-4 py-2">Start Date</th>
                        <th class="px-4 py-2">End Date</th>
                        <th class="px-4 py-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% leagues.forEach(league=> { %>
                    <tr class="capitalize hover:bg-gray-200 ">
                        <td class="px-4 py-2">
                            <%= league.leagueName %>
                        </td>
                        <td class="px-4 py-2 text-blue-900 border-l border-gray-300 whitespace-nowrap max-w-xs overflow-ellipsis">
                            <%= league.sport %>
                        </td>
                        <td class="px-4 py-2 text-blue-900 border-l border-gray-300 whitespace-nowrap max-w-xs overflow-ellipsis">
                            <%= league.startDate.toLocaleDateString('en-US', { month: 'short' , day: 'numeric' , year: 'numeric' }) %>
                        </td>
                        <td class="px-4 py-2 text-blue-900 border-l border-gray-300 whitespace-nowrap max-w-xs overflow-ellipsis">
                            <%= league.endDate.toLocaleDateString('en-US', { month: 'short' , day: 'numeric' , year: 'numeric' }) %>
                        </td>
                        <td class="flex items-center px-4 py-2 text-blue-900 border-l border-gray-300">
                            <a href="/locations/<%= league._id %>/locations"
                                class="flex items-center text-indigo-600 hover:text-indigo-900">
                                <span class="material-icons mr-1 text-xl">location_on</span> View Locations
                            </a>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>

        </main>
    </div>

    <%- include('partials/footer') %>
  
</body>

</html>
